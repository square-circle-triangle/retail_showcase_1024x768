								<% if @mode == 'edit' %>
									<div class="blocks_notes type_2">
										<p>First line for offer box:</p>
									</div>
								<% end %>
								<span class="line_1"><%= render :textual => 'offer_top_line_', :default => 'now only', :maxlength => '15' %></span>
								<% if @mode == 'edit' %>
									<div class="blocks_notes type_2">
										<p>Dollars and cents for offer box:</p>
									</div>
								<% end %>
								<div class="price_div">
									<span class="price_sign">$</span>
									<span class="price_dollars"><%= render :textual => 'offer_dollars_', :default => '105', :maxlength => '3' %></span>
									<span class="price_point">.</span>
									<span class="price_cents"><%= render :textual => 'offer_cents_', :default => '90', :maxlength => '2' %></span>
								</div>
								<% if @mode == 'edit' %>
