											var myVal = $(this).find(':selected').val();
											if ( myVal === 'option_1' ) {
												alert(1);
											}
											if ( myVal === 'option_2' ) {
												alert(2);
											}
											if ( myVal === 'option_3' ) {
												alert(3);
											}
										});

									}(jQuery));
									
								</script>

							<% end %>

